<mapper namespace="com.qf.manager.dao.TbItemCustomMapper" >

  <sql id="Base_Column_List" >
    i.id, i.title, i.sell_point sellPoint, i.price, i.num, i.barcode, i.image, i.cid, i.status, i.created, i.updated,c.name catName
