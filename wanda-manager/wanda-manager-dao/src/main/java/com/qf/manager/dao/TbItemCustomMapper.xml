  <select id="selectItemsByPage" parameterType="com.qf.manager.pojo.dto.PageParam" resultType="com.qf.manager.pojo.vo.ItemCustom">
    SELECT
    <include refid="Base_Column_List" />
    FROM
    tb_item i
    LEFT JOIN tb_item_cat c
